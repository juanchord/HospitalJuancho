@model IEnumerable<HospitalJuancho.Models.Medicos>

@{
    ViewBag.Title = "Index";
}

<h2>Medicos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exequatur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exequatur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidad)
        </td>

        <td class="btn btn-primary myBtn">
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_Medico })  
        </td>
        <td class="btn btn-danger myBtn">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Medico })
        </td>
        <td class="btn btn-success myBtn">
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Medico })
        </td>
    </tr>
}

</table>
