@model IEnumerable<HospitalJuancho.Models.Ingresos>

@{
    ViewBag.Title = "Index";
}

<h2>Ingresos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Habitacion.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Ingreso)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Habitacion.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
        </td>
        <td class="btn btn-primary myBtn">
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_Ingresos })
        </td>
        <td class="btn btn-danger myBtn">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Ingresos })
        </td>
        <td class="btn btn-success myBtn">
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Ingresos})
        </td>
    </tr>
}

</table>
